<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rayacevedo45.c4q.nyc.art" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/monarealframe"
        android:label="ART"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Cards"
            android:label="@string/title_activity_cards"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".LandingPage"
            android:label="ART"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NotePagerActivity"
            android:label="@string/title_activity_note"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NoteListActivity" />
        </activity>
        <activity
            android:name=".NoteListActivity"
            android:label="@string/title_activity_note_list"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
