    <LinearLayout
        android:layout_width="200dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@color/background_material_light">
    <Button
        android:layout_width="match_parent"
        android:text="To-do list"
        android:id="@+id/todoButton"
        android:layout_height="wrap_content"></>

        <Button
            android:layout_width="match_parent"
            android:text="Weather"
            android:id="@+id/weatherButton"
            android:layout_height="wrap_content"></>

        <Button
            android:layout_width="match_parent"
            android:text="Horoscope"
            android:id="@+id/horoscopeButton"
            android:layout_height="wrap_content"></>

        <Button
            android:layout_width="match_parent"
            android:text="Stocks"
            android:id="@+id/stocksButton"
            android:layout_height="wrap_content"></>

        <Button
            android:layout_width="match_parent"
            android:text="Ny Times"
            android:id="@+id/newsButton"
            android:layout_height="wrap_content"></>
    </LinearLayout>


<LinearLayout
android:orientation="vertical"
android:layout_height="match_parent"
android:layout_width="match_parent"
    android:background="@color/cardview_shadow_end_color">

    <TextView android:id="@+id/welcomeTV"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:text="@string/hello_world"
    android:textSize="30sp"/>

    <FrameLayout
        android:layout_width="747dp"
        android:id="@+id/tabletContainer"
        android:layout_height="match_parent"
        android:background="#fffff4dd"></FrameLayout>


</LinearLayout>

</LinearLayout>



